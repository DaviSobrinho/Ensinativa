<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transaparent"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/transaparent"
        app:backgroundTintMode="src_atop"
        android:id="@+id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foregroundTint="@color/grey7_50_to_100_transparency_gradient"
        android:foreground="@drawable/ic_image_foreground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/material_button_5dp_border_background">
    </Button>
    <com.google.android.material.button.MaterialButton
        app:cornerRadius="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/quitButton"
        android:background="@drawable/material_button_rounded_border_background"
        app:backgroundTint="@color/transparent50white"
        app:backgroundTintMode="multiply"
        android:foregroundTint="@color/gray7"
        android:foreground="@drawable/ic_arrow_left_foreground"
        android:foregroundTintMode="multiply"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>