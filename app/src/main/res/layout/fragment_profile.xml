<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ProfileFragment">

    <LinearLayout
        android:orientation="vertical"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/photoBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/material_button_rounded_border_background"
                app:backgroundTintMode="src_atop"
                app:backgroundTint="@color/transaparent">
            </Button>
            <Button
                android:id="@+id/photo"
                android:elevation="1dp"
                app:layout_constraintTop_toTopOf="@id/photoBackground"
                app:layout_constraintStart_toStartOf="@id/photoBackground"
                app:layout_constraintEnd_toEndOf="@id/photoBackground"
                android:layout_width="99dp"
                android:layout_height="99dp"
                app:layout_constraintBottom_toBottomOf="@id/photoBackground"
                android:background="@drawable/round_white"
                app:backgroundTintMode="src_atop"
                app:backgroundTint="@color/transaparent"
                android:foregroundTint="@color/gray7"
                android:foreground="@drawable/ic_person_foreground"
                >
            </Button>


            <ImageView
                android:id="@+id/stars"
                android:src="@drawable/ic_star_foreground"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/photoBackground"
                android:layout_marginStart="12dp"
                app:tint="@color/yellow5">
            </ImageView>
            <TextView
                android:id="@+id/rating"
                android:text="Rating"
                android:paddingTop="4dp"
                android:textSize="16sp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/stars"
                app:layout_constraintBottom_toBottomOf="@id/stars"
                app:layout_constraintStart_toEndOf="@id/stars"
                android:layout_marginStart="-12dp"
                app:tint="@color/yellow5">
            </TextView>

            <Button
                app:backgroundTint="@color/transaparent"
                app:backgroundTintMode="src_atop"
                android:background="@drawable/material_button_rounded_border_background"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:id="@+id/editPhoto"
                android:foreground="@drawable/ic_camera_foreground"
                android:foregroundTint="@color/gray7"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintBottom_toBottomOf="@id/photo"
                app:layout_constraintEnd_toEndOf="@id/photo">
            </Button>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/displayName"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:maxLines="1"
            android:lines="1"
            android:text=""
            android:textAlignment="center">
        </TextView>
        <ImageView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="@drawable/top_border">
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="@drawable/bottom_border">
        </ImageView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/about">
            </TextView>
            <ImageView
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:id="@+id/editDescription"
                android:src="@drawable/ic_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/gray7">
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/description_textView"
            android:layout_marginEnd="4dp"
            android:maxLines="12"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_width="match_parent"
            android:maxHeight="200dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="Your profile has no description yet, try to add one by clicking on edit button.">
        </TextView>
        <ImageView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="@drawable/top_border">
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="@drawable/bottom_border">
        </ImageView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/skills">
            </TextView>
            <ImageView
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:id="@+id/editSkills"
                android:src="@drawable/ic_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/gray7">
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/skills_textView"
            android:layout_marginEnd="4dp"
            android:maxLines="2"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_width="match_parent"
            android:maxHeight="200dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="@string/you_have_no_skills_added_try_to_add_one_by_editing_your_profile">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tags_recycler_view"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        <ImageView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="@drawable/top_border">
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="@drawable/bottom_border">
        </ImageView>
        <TextView
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/achievements">
        </TextView>
        <TextView
            android:visibility="gone"
            android:id="@+id/achievements_textView"
            android:layout_marginEnd="4dp"
            android:maxLines="2"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_width="match_parent"
            android:maxHeight="200dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="@string/you_haven_t_earned_an_achievement_yet_solve_requests_to_get_them">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/achievements_recycler_view"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        <ImageView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="@drawable/top_border">
        </ImageView>
    </LinearLayout>


</ScrollView>