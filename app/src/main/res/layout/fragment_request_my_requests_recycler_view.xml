<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/transaparent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragmentRequestMyRequestRequestLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/material_button_5dp_border_background">
        <Button
            app:cornerRadius="5dp"
            android:id="@+id/fragmentRequestMyRequestRequestImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:foregroundTint="@color/grey7_50_to_100_transparency_gradient"
            android:foreground="@drawable/ic_image_foreground"
            app:backgroundTint="@color/transaparent"
            app:backgroundTintMode="src_atop"
            android:background="@drawable/material_button_5dp_border_background">
        </Button>
        <Button
            android:visibility="gone"
            app:cornerRadius="5dp"
            android:id="@+id/fragmentRequestMyRequestSolvedRibbon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="46dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:backgroundTint="@color/transaparent"
            app:backgroundTintMode="add"
            android:background="@drawable/solved_ribbon">
        </Button>
        <TextView
            android:layout_marginEnd="48dp"
            android:textColor="@color/blue5"
            android:padding="0dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:id="@+id/fragmentRequestMyRequestRequestTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="@string/title">
        </TextView>

        <Button
            app:cornerRadius="5dp"
            android:id="@+id/fragmentRequestMyRequestRequestRemoveButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:backgroundTint="@color/gray7"
            app:backgroundTintMode="src_atop"
            android:background="@drawable/trash_can">
        </Button>
        <TextView
            android:padding="0dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:id="@+id/fragmentRequestMyRequestRequestDescription"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/description">
        </TextView>
        <TextView
            android:id="@+id/fragmentRequestMyRequestRequestTags"
            android:textSize="12sp"
            android:orientation="horizontal"
            android:padding="0dp"
            android:gravity="center_vertical"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Tags">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>